[alias]
  a = add
  ap = add -p
  au = update-index --assume-unchanged
  bi = bisect start
  bib = bisect bad
  big = bisect good
  bir = bisect reset
  bis = bisect skip
  br = branch -v
  bra = branch -av
  brn = "!git config branch.$(git symbolic-ref HEAD|sed \"s/refs\\/heads\\///\").note $( if [ $# -gt 0 ]; then $1; fi)"
  brr = branch -rv
  c = clone
  ca = commit -a
  cam = commit -a -m
  ci = commit
  cim = commit -m
  co = checkout
  conflicts = diff --name-only --diff-filter=U
  cp = cherry-pick
  dci = dcommit
  df = diff --word-diff=color
  dfc = diff --cached
  dfi = !cd "${GIT_PREFIX:-.}" && export IMAGE_DIFF=1 && git diff
  dfp = diff --no-color
  dfs = diff --shortstat --numstat
  dft = difftool
  dfw = diff --word-diff=color -w
  diff-image = !cd "${GIT_PREFIX:-.}" && export IMAGE_DIFF=1 && git diff
  ds = describe
  f = fetch
  lg = log --format=wren-short --abbrev-commit --date=relative
  logs = log --stat=100,100,25
  logs-full = log --format=wren-full --stat --use-mailmap --date=format:'%H:%M%p %a %B %d, %Y '
  ls = ls-files
  lsu = ls-files --others --exclude-standard
  mg = merge
  mgs = merge --squash
  mgt = mergetool
  pl = pull
  pls = "!func(){ cyan=$(tput setaf 6); reset=$(tput sgr0); printf -- \"${cyan}───── Pull ─────${reset}\n\" && git pull && printf \"\n${cyan}───── Push ─────${reset}\n\" && git push; }; func"
  ps = push
  pst = push --tags
  r = reset
  rb = rebase
  rem = remote -v
  rh = reset --hard
  rp = reset --patch
  rs = reset --soft
  s = stash
  sb = submodule
  sbst = submodule status
  sd = stash drop
  sh = show --word-diff=color
  sl = stash list
  sp = stash pop
  ss = stash save
  st = status -s
  standup = "!func(){ git log --all --no-merges --graph --date=relative --committer=\"$(git config --get user.email)\" --pretty=format:'%C(cyan) %ad %C(yellow)%h %Creset %s %Cgreen%d' --since=\"$(if [[ "Mon" == "$(date +%a)" ]]; then echo 'last friday'; else echo 'yesterday'; fi;)\"; }; func"
  sur = submodule update --recursive
  suri = submodule update --recursive --init
  t = tag -a
  todo = grep -in "@todo"
