[alias]
  a = add
  ap = add -p
  au = update-index --assume-unchanged
  bi = bisect start
  bib = bisect bad
  big = bisect good
  bir = bisect reset
  bis = bisect skip
  br = branch -v
  bra = branch -av
  brn = "!git config branch.$(git symbolic-ref HEAD|sed \"s/refs\\/heads\\///\").note $( if [ $# -gt 0 ]; then $1; fi)"
  brr = branch -rv
  c = clone
  ca = commit -a
  cam = commit -a -m
  ci = commit
  cim = commit -m
  co = checkout
  conflicts = diff --name-only --diff-filter=U
  cp = cherry-pick
  dci = dcommit
  df = diff --word-diff=color
  dfc = diff --cached
  dfp = diff --no-color
  dfs = diff --shortstat --numstat
  dft = difftool
  dfw = diff --word-diff=color -w
  dfi = !cd "${GIT_PREFIX:-.}" && export IMAGE_DIFF=1 && git diff
  diff-image = !cd "${GIT_PREFIX:-.}" && export IMAGE_DIFF=1 && git diff
  ds = describe
  f = fetch
  lg = log --graph --pretty=format:'%C(yellow)%h%Creset%C(auto)%d%Creset%C(dim white) %s %Creset%C(cyan)%cd %Creset%C(green)by %aN%Creset' --abbrev-commit --date=relative
  logs = log --stat --graph --decorate --use-mailmap
  ls = ls-files
  mg = merge
  mgs = merge --squash
  mgt = mergetool
  pl = pull
  pls = "!func(){ printf -- '--- Pull ---\n' && git pull && printf '\n--- Push ---\n' && git push; }; func"
  ps = push
  pst = push --tags
  r = reset
  rb = rebase
  rem = remote -v
  rh = reset --hard
  rs = reset --soft
  rp = reset --patch
  s = stash
  sb = submodule
  sbst = submodule status
  sd = stash drop
  sh = show --word-diff=color
  sl = stash list
  sp = stash pop
  ss = stash save
  st = status -sb
  sur = submodule update --recursive
  suri = submodule update --recursive --init
  t = tag -a
  todo = grep -in "@todo"
