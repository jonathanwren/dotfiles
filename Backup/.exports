# Make nano the default editor
export EDITOR=nano

# Color options for ls
export CLICOLOR=true
export LSCOLORS='gxfxcxdxbxegedabagacad' #`man ls` to see options

# Larger bash history (allow 32³ entries; default is 500)
export HISTSIZE=32768
export HISTFILESIZE=$HISTSIZE
export HISTCONTROL=ignoredups

# Make some common commands not show up in history (to keep things)
export HISTIGNORE='jrnl *:ls:cd:cd -:pwd:exit:date:* --help'

# Prefer US English and use UTF-8
export LANG="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"

# Highlight section titles in manual pages
export LESS_TERMCAP_md="$ORANGE"

# Don’t clear the screen after quitting a manual page
export MANPAGER="less -X"

# Use the ~/.config folder for config when app supports it
export XDG_CONFIG_HOME="${HOME}/.config"

# default options for fzf (used in vim)
export FZF_DEFAULT_COMMAND='fd --type f --hidden --follow --exclude .git'
