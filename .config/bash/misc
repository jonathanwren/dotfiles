
# fzf (fuzzy file completion)
[[ $- == *i* ]] && source "/usr/local/opt/fzf/shell/completion.bash" 2> /dev/null # Auto-completion
source "/usr/local/opt/fzf/shell/key-bindings.bash" # Key bindings
# Enable this to use FZF for all completion
# FZF_COMPLETION_TRIGGER=''
output_time_elapsed "FZF initialized" "misc" &

# https://github.com/nvbn/thefuck
eval $(thefuck --alias)
output_time_elapsed "TheFuck initialized" "misc" &

# pyenv will work some magic on the path to manage python versions
if [ -z "${POETRY_ACTIVE}" ] && command -v pyenv 1>/dev/null 2>&1; then
  eval "$(pyenv init -)"
  output_time_elapsed "PyEnv initialized" "misc" &
fi
