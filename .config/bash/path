# give Homebrew priority
output_time_elapsed "start path" "path" &

# BREW_PREFIX="$(brew --prefix)"
BREW_PREFIX="/usr/local"
output_time_elapsed "brew --prefix" "path" &

output_time_elapsed "absolutely nothing" "path" &

PATH="${BREW_PREFIX}/bin:${BREW_PREFIX}/sbin:${BREW_PREFIX}/Cellar:$PATH"
output_time_elapsed "set base path" "path" &

# use coreutils without prefix of g (e.g. ls instead of gls)
PATH="${BREW_PREFIX}/opt/coreutils/libexec/gnubin:$PATH"
PATH="${BREW_PREFIX}/opt/findutils/libexec/gnubin:$PATH"
PATH="${BREW_PREFIX}/opt/gnu-tar/libexec/gnubin:$PATH"
PATH="${BREW_PREFIX}/opt/gnu-sed/libexec/gnubin:$PATH"
PATH="${BREW_PREFIX}/opt/gnu-indent/libexec/gnubin:$PATH"
PATH="${BREW_PREFIX}/opt/gnu-getopt/bin:$PATH"
PATH="${BREW_PREFIX}/opt/grep/libexec/gnubin:$PATH"
output_time_elapsed "gnu path utils" "path" &

# node.js to the back of the line
PATH="${PATH}:${N_PREFIX}/bin:/usr/local/share/npm/bin"
output_time_elapsed "npm path" "path" &

# also Ruby, I guess
PATH="${PATH}:/Library/Ruby/Gems/2.3.0"
output_time_elapsed "ruby path" "path" &

# fzf (fuzzy file completion)
PATH="${PATH}:/usr/local/opt/fzf/bin"
output_time_elapsed "fzf" "path" &

# ugh, Poetry doesn't let us change config path
PATH="${HOME}/.local/share/poetry/bin:${PATH}"
output_time_elapsed "poetry bin" "path" &

# our local shenanigans
PATH="${PATH}:${HOME}/bin:${HOME}/.local/bin"
output_time_elapsed "local path" "path" &

# de-dupe the path
PATH="$(printf -- '%s' "$PATH" | tr ':' '\n' | awk '!seen[$0]++' | tr '\n' ':')"
output_time_elapsed "de-dupe path" "path" &

