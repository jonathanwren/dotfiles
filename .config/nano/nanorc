# @see https://www.nano-editor.org/dist/latest/nanorc.5.html
set tabsize 2
set tabstospaces
set mouse
set smooth
set speller "aspell -x -c"

# Bind some keyboard shortcuts
bind M-B prevword main
bind M-F nextword main
bind M-5 cutwordleft main
bind ^F whereis main
bind ^Z undo main
bind ^Y redo main

include "~/.config/nano/nanorcs/*.nanorc"
